<%- include ('./partials/header.ejs') -%>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">

        <% user.posts.forEach(function(elem){ %>
            <div class="card w-32 overflow-hidden">
                <div class="w-full h-full rounded-lg overflow-hidden">
                    <img src="/images/uploads/<%= elem.image %>" alt="">
                    <h2 class="mt-2 text-sm font-bold " ><%= elem.title %></h2>
                    <p class="mt-2 text-sm"><%= elem.description %></p>
                    
                
                </div>
                
    
            </div>

       <% })%>

        

    </div>

</div>
<%- include ('./partials/footer.ejs') -%>