<%- include ('./partials/header.ejs') -%>
<div class="w-full h-screen bg-[url(https://images.pexels.com/photos/1616403/pexels-photo-1616403.jpeg?auto=compress&cs=tinysrgb&w=600)] bg-center bg-cover flex items-center justify-center">
  <div class="w-[30vw] bg-white px-8 py-8 rounded-md">
    <h1 class="text-4xl text-center font-semibold text-zinc-700 leading-none tracking-tighter mb-5">Welcome to pinterest.</h1>
    <form action="/login" method="post">

      <div class="text-red-800 font-semibold capitalize"><%= error %></div>
      <label for="username" class="font-semibold">Username</label>
      <input class="border-2 rounded-[30px] block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="Username">

      <label for="password" class="font-semibold">Password</label>
      <input class="border-2 rounded-[30px] block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="Password">
      
      <a href="#" class="mt-2 inline-block text-zinc-700 font-semibold">Forgot Password ?</a>
      <input class="block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value=" Login">
      <p class="text-xs font-semibold text-zinc-700 mt-8 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy; Opens a new tab. Notice at collection</p>
    </form>
    <a class="inline-block mt-3 text-sm font-semibold w-full text-center" href="/register">Don't have an account ?</a>

  </div>
</div>





<%- include ('./partials/footer.ejs') -%>
