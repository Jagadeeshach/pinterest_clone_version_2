<%- include ('./partials/header.ejs') -%>

<div class="w-full h-screen bg-[url(https://images.pexels.com/photos/2847648/pexels-photo-2847648.jpeg?auto=compress&cs=tinysrgb&w=600)] bg-center bg-cover flex items-center justify-center">
    <div class="w-[30vw] bg-white px-8 py-8 rounded-md">
      <h1 class="text-4xl text-center mb-10 font-semibold text-zinc-700 leading-none tracking-tighter mb-5">Create New Account</h1>
      <form action="/register" method="post">
        <label for="username" class="font-semibold">Username</label>
        <input class="border-2 rounded-[30px] block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="Username">

        <label for="fullname" class="font-semibold">Fullname</label>
        <input class="border-2 rounded-[30px] block mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Fullname">

        <label for="email" class="font-semibold">Email</label>
        <input class="border-2 rounded-[30px] block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="Email">

        <label for="contact" class="font-semibold">Contact</label>
        <input class="border-2 rounded-[30px] block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="Contact">

        <label for="password" class="font-semibold">Password</label>
        <input class="border-2 rounded-[30px] block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="Password">
        

        <input class="block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">
        <p class="text-xs font-semibold text-zinc-700 mt-8 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy; Opens a new tab. Notice at collection</p>
      </form>
      <a class="inline-block mt-3 text-sm font-semibold w-full text-center" href="/">Already have an account ?</a>
  
    </div>
  </div>







<%- include ('./partials/footer.ejs') -%>