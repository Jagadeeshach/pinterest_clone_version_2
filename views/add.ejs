<%- include ('./partials/header.ejs') -%>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Create a new post</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-2 py-3 border-2 rounded-lg" type="file" name="postimage">

        <input class="block w-1/3 px-2 py-3 border-2 rounded-lg mt-2 text-black" type="text" placeholder="Title" name="title">

        <textarea class="block w-1/3 h-60 resize-none px-2 py-3 border-2 rounded-lg mt-2 text-black" type="text" placeholder="Description" name="description"></textarea>
        
        <input class="block w-1/3 px-2 py-3  rounded-lg mt-2 bg-red-700 font-semibold" type="submit" value="Create Post">
    </form>


</div>









